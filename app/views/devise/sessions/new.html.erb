<h2 class="text-center text-xl text-warning">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-group needs-validation" ) do |f| %>
  <div class="">
    <%= f.label :email, class: "mr-4 text-red-700"%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "form-control", required: true%>
  </div>

  <div class="">
    <%= f.label :password, class: "" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control ", required: true %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-warning" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
