<div class="w-full">
<h1 class="text-center text-warning fs-3">List of foods</h1>
    <div class=" w-full flex justify-center items-center mb-4 p-0">
      <%= link_to "Add food", new_food_path , class:"text-white bg-success px-2 py-2 rounded text-decoration-none" %>
    </div>
    <table class="table table-striped table-hover table-bordered">
  <thead class="bg-success text-light">
    <tr>
      <th scope="col">Food</th>
      <th scope="col">Measurement Unit</th>
      <th scope="col">Unit Price</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @foods.each do |food| %>
    <tr>
      <th scope="row" class="text-black"><%= food.name %></th>
      <td class="text-black"><%= food.measurement_unit %></td>
      <td class="text-black">$<%= food.price %></td>
      <td><%= button_to "Delete", food_path(food.id), method: :delete, class: "text-red-700" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
