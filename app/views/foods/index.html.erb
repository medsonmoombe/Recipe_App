<div class="w-full">
<h1 class="text-lime-600 text-3xl bold text-center mt-8 font-semibold">List of foods</h1>
    <div class=" w-full flex justify-center items-center mb-4 p-0">
      <%= link_to "Add food", new_food_path , class:"text-white bg-lime-600 px-2 py-2 rounded no-underline" %>
    </div>
    <table class="table table-striped table-hover table-bordered">
  <thead class="bg-lime-600 text-white">
    <tr>
      <th scope="col">Food</th>
      <th scope="col">Measurement Unit</th>
      <th scope="col">Unit Price</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @foods.each do |food| %>
    <tr>
      <th scope="row" class="text-black"><%= food.name %></th>
      <td class="text-black"><%= food.measurement_unit %></td>
      <td class="text-black">$<%= food.price %></td>
      <td><%= button_to "Delete", food_path(food.id), method: :delete, class: "text-red-700" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
