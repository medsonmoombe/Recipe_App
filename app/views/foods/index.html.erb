<div class="container h-screen px-0">
  <div class="container w-full flex justify-between items-center mt-8 mb-4 p-0">
    <h2 class="text-grayDark">List of foods</h2>
    <span class="btn btn-primary flex justify-center items-center"><%= link_to "Add food", new_food_path , class:"text-white p-0" %></span>
  </div>
  <table class="table table-striped table-hover table-bordered ">
    <thead class="table-dark text-xs md:text-md lg:text-lg">
      <tr class="font-thin text-center">
        <th scope="col">Food</th>
        <th scope="col">Unit</th>
        <th scope="col">Unit Price</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @foods.each do |food| %>
        <tr class="text-xs md:text-md lg:text-lg text-center">
          <th scope="row"><%= food.name %></th>
          <td><%= food.measurement_unit %></td>
          <td>$<%= food.price %></td>
          <td><%= button_to "Delete", food_path(food.id), method: :delete, class: "text-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
