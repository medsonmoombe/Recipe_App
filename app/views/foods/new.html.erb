<div class="container w-full p-4 b-2">
    <h2 class="text mb-4 text-center text-3xl font-semibold text-lime-600">Add new food</h2>
    <%= form_with model: @food, url: foods_path,  local: true, data: {turbo:false} do |f| %>
        <div class="mb-3">
            <%= f.label :name, class: "form-label" %>
            <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="mb-3">
            <%= f.label :measurement_unit, class: "form-label" %>
            <%= f.text_field :measurement_unit, class: "form-control" %>
        </div>
        <div class="mb-3">
            <%= f.label :price, class: "form-label" %>
            <%= f.number_field :price, class: "form-control" %>
        </div>      
        <%= f.submit class: "bg-lime-600 rounded px-3 py-2 text-decoration-none text-sm text-white" %>
    <% end %>
</div>
