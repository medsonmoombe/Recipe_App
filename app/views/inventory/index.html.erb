<section class = 'd-flex flex-column mb-2 align-items-center container'>
  <% if @inventories.empty? %>
    <h2>There are no Inventories <em>yet !!</em></h2>
  <% else %>
    <% @inventories.each do |inventory| %>
      <div class='d-flex flex-col link'>
        <div class='inventory-container'>
          <div class='inventory'>
              <%= link_to inventory.name, user_inventory_path(id: inventory), class:'link'%>
              <%= button_to 'REMOVE', user_inventory_path(id: inventory), method: :delete, class:'link'%>
          </div>
          <div class='inventory-desc'>
            <p>
              Description for the inventory. So much text in this small place. Lorem ipsum dolor sit
            </p>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>

  <% if user_signed_in? %>
      <%= link_to "Add new Inventory", new_user_inventory_path, class: 'btn btn-priamary btn-inv' %>
  <% end %>
  </div>
</section>
