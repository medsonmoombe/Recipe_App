
<div class="w-full sm:w-2/3 md:w-6/12 m-auto h-auto flex flex-col pt-0  pb-4 sm:py-12 justify-center align-items-center">
  <div class="container">
    <% if @recipes.empty? %>
      <h2 class="text-center">You don't have any recipes yet!</h2>
    <% else %>
      <%= render 'recipe/recipe' %>
    <% end %>
  </div>
  <div class="container mt-2 md:mt-4">
    <% if user_signed_in? %>
      <span class="btn btn-primary w-full">
        <%= link_to "New Recipe", new_user_recipe_path(user_id: current_user), class: "text-white" %>
      </span>
    <% end %>
  </div>
</div>
