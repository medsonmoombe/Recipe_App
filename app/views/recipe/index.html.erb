<div class="d-flex flex-column mb-2 align-items-center pb-4">
  <p style="color: green"><%= notice %></p>
  <div class="w-100">
  <h1 class="text-center text-warning fs-3">Recipes</h1>

  <div id="recipes" class="d-flex flex-column mb-2 bg-secondary rounded">
  <% if @recipes.empty? %>
      <h2 class="text-white">You don't have any recipes yet.</h2>
    <% else %>
    <%= render 'recipe/recipe' %>
    <% end %>
  </div>

  <% if user_signed_in? %>
      <%= link_to "New Recipe", new_user_recipe_path(user_id: current_user), class: "text-white bg-success px-2 py-2 rounded text-decoration-none"%>
    <% end %>
  </div>
</div>
